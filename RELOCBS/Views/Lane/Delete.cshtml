@model RELOCBS.Entities.LaneViewModel

@{
    ViewBag.Title = "Delete Lane";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

@Html.Partial("_Flash")

<div class="modal-body">
    <h3>Are you sure you want to delete this?</h3>
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.LaneName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LaneName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OriginCountryID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OriginCountryID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OriginCountry)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OriginCountry)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DestinationCountryID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DestinationCountryID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DestinationCountry)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DestinationCountry)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OriginCityID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OriginCityID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OriginCity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OriginCity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DestinationCityID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DestinationCityID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DestinationCity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DestinationCity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.isActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.isActive)
            </dd>

        </dl>

    </div>
</div>
<div class="modal-footer">
    <div class="pull-right">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#mdlAddEdit form').on('submit', function (e) {
            e.preventDefault();
            $(this).ajaxSubmit({
                target: '#mdlAddEdit .modal-content',
                success: function() {
                    if ($('#flash-messages').hasClass('alert-success')) {
                        setTimeout(function() {
                            $('#mdlAddEdit').modal('hide');
                            $('#mgrid .pagination li.active a').trigger('click');
                        }, 1000);
                    }
                }
            });
        });
    });
</script>


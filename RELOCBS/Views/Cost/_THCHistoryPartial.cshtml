@model IEnumerable<RELOCBS.Entities.SubHistorySplTHC>

<style type="text/css">
    #subT a:link {
        color: black;
        font-weight: bold;
    }

    th, td {
        padding: 5px;
    }

    th {
        background-color: rgb(248, 248, 248);
    }

    #gridT, #gridT tr {
        border: 1px solid #0D857B;
    }

    #subT, #subT tr {
        border: 1px solid #f3f3f3;
    }

    #subT {
        margin: 0px 0px 0px 10px;
        padding: 5px;
        width: 95%;
    }

        #subT th {
            font-size: 14px;
        }

        /*#subT > tbody > tr:first-child > td {
            vertical-align: top;
            background-color: #F5F5F6;
            font-weight: bold;
        }*/
</style>

@{

    WebGrid grid = new WebGrid(source: Model, canPage: false, canSort: false);

    var SubGridColumns = new List<WebGridColumn>();

    SubGridColumns.Add(grid.Column("Mode", "Mode"));
    SubGridColumns.Add(grid.Column("SlabValue", "SlabValue"));
    SubGridColumns.Add(grid.Column("THCValue", "THCValue"));

    WebGrid subGrid = new WebGrid(source: Model, canPage: false);
}

@subGrid.Table(tableStyle: "table table-responsive table-bordered", displayHeader: true, htmlAttributes: new { id = "subT" }, columns: subGrid.Columns(SubGridColumns.ToArray()))

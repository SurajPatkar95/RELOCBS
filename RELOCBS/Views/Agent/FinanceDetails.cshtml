                    <div class="form-group row">
                        <label class="control-label col-md-3 col-md-offset-2">Name</label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.FinanceDetails.Name, new { htmlAttributes = new { @class = "form-control input-sm" } })
